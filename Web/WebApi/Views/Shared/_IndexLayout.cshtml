<!DOCTYPE html>
<html lang="zh">
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
        <meta content="yes" name="apple-mobile-web-app-capable">
        <meta name="viewport" content="width=device-width,height=device-height,inital-scale=1.0,maximum-scale=1.0,user-scalable=no;">
        <title>@ViewBag.Title</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        @Scripts.Render("~/Scripts/base.min.js")
        @Styles.Render("~/Content/global.css")
        @Styles.Render("~/Content/list.css")
        @Styles.Render("~/Content/index.css")
        @Styles.Render("~/fonts/iconfont.css")
        @Scripts.Render("~/Scripts/yk.core.common.js")
        <script type="text/javascript">            
            $(function () {
                $(".app_center div").each(function (i) {
                    if ((i + 1) % 3 == 0) {
                        $(this).css("border-right-width ", "0");
                    }
                });
                var width = $(window).width();
                $(".app_center div").css("width", (width - 3) / 3);
            });
            function urlLocation(url) {
                window.location = url;
            }
    </script>
    </head>
    <body>
        <div class="wrap">
            @RenderBody()
        </div>   
        @Html.Partial("~/Views/Component/Frontend/BottomNav.cshtml")
    </body>
</html>
